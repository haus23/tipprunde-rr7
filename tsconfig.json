{
  "include": ["app", "app/**/.server/**/*.ts", "app/**/.server/**/*.tsx"],
  "compilerOptions": {
    // Source
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react-jsx",
    "target": "ES2023",
    "types": ["@react-router/node", "vite/client"],
    "verbatimModuleSyntax": true,

    // Bundler
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "Preserve",
    "resolveJsonModule": true,

    // TSC
    "skipLibCheck": true,
    "noEmit": true,

    // DX
    "paths": {
      "#/*": ["./app/*"]
    }
  }
}
