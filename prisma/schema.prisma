generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(uuid())
  name  String  @unique
  slug  String  @unique
  email String? @unique
  role  String
}

model Verification {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  email     String   @unique
  secret    String
  algorithm String
  digits    Int
  period    Int
  charSet   String
  expiresAt DateTime
}
